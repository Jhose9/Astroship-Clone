---
import Layout from "../../layouts/Layout.astro";
import CardEmployees from "@/components/cardEmployees.astro";
import "@/styles/globals.css";
interface EmployeesProsp {
    name:string,
    img:string,
    job:string
}
const DataEmployees:EmployeesProsp[]=[
    {
    name:"janette Lynch",
    job:"Senior Director",
    img:"https://images.unsplash.com/photo-1580489944761-15a19d654956?&fit=crop&w=280"
    },
    {
    name:"Marcell Ziemann",
    job:"Principal Strategist",
    img:"https://images.unsplash.com/photo-1633332755192-727a05c4013d?&fit=crop&w=280"
    },
    {
    name:"Robert Palmer",
    job:"Marketing Engineer",
    img:"https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?&fit=crop&w=280"
    }
];
---

<Layout title="About | AstroShip">
  <div class="mt-14">
    <div class="space-y-5">
      <h1 class="font-bold text-center text-5xl">About</h1>
      <p class="text-center text-slate-600 text-lg">
        We are a small passionate team.
      </p>
    </div>

    <div class="w-3/6 mx-auto mt-12 space-y-3 description">
      <h2 class="font-bold text-start text-4xl title">
        Empowering the world with Astro.
      </h2>
      <p class="text-slate-600 text-lg title ">
        We're a multi-cultural team from around the world! We come from diverse
        backgrounds,bringing different personalities, experiences and skills to
        the job. This is what makes our team so special.
      </p>
    </div>
    <div class="flex flex-wrap gap-12 justify-center items-center mt-11 card">
        {
            DataEmployees.map((elemt)=>(
                <CardEmployees name={elemt.name} job={elemt.job} img={elemt.img}/>
            ))
        }
    </div>
  </div>
</Layout>

<style>
  @media screen and (max-width: 851px) {
    .description {
      width: 100%;
    }
    .title {
      text-align: center;
    }
  }
</style>
