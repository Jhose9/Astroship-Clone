---
import { cn } from "../lib/utils";
interface dataList {
  id: number;
  name: string;
}

interface Props {
  names: dataList[];
  btnName: string;
  href: string;
  price: string;
  type: string;
  className?: string;
}

const { btnName, type, price, href, names, className } = Astro.props;
---

<div
  class="w-80 h-[30rem] flex flex-col items-center border-2 rounded-md space-y-5 pt-5 card"
>
  <h2 class="text-lg font-medium text-gray-400">{type}</h2>
  <h3 class="font-bold text-4xl">{price}</h3>

  <ul class="space-y-4">
    {
      names.map((elem) => (
        <li class="flex gap-3">
          <svg
            class="w-6 h-6"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <circle
              cx="12"
              cy="12"
              r="9"
              fill="currentColor"
              fill-opacity=".16"
            />
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M3.75 12a8.25 8.25 0 0 1 11.916-7.393.75.75 0 1 0 .668-1.343A9.713 9.713 0 0 0 12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75c0-.366-.02-.727-.06-1.082a.75.75 0 1 0-1.49.164A8.25 8.25 0 1 1 3.75 12Zm17.78-6.47a.75.75 0 0 0-1.06-1.06L12 12.94l-2.47-2.47a.75.75 0 0 0-1.06 1.06l3 3a.75.75 0 0 0 1.06 0l9-9Z"
              fill="currentColor"
            />
          </svg>
          {elem.name}
        </li>
      ))
    }
  </ul>

  <a class={cn(className)} href={href}>
    {btnName}
  </a>
</div>

<style>
  @media screen and (max-width: 808px) {
    .card {
      width: 90%;
      margin-left: auto;
      margin-right: auto;
    }
  }
</style>
